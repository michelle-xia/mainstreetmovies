@model Final_Project.Models.MovieOrder

@{
    ViewData["Title"] = "Cancel";
}
<br>

<h1>Cancel Order</h1>

<h3>Are you sure you want to cancel your order?</h3>
<div>
    <h4>MovieOrder</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.isGift)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isGift)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConfirmationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConfirmationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOrdered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOrdered)
        </dd>

    </dl>
    <h5>Tickets on this Order</h5>
    <table class="table table-primary">
        <tr>
            <th>Movie Name</th>
            <th>Ticket Price</th>
            <th>Seat Number</th>
            <th>Show Time</th>
        </tr>
        @foreach (Ticket ti in Model.Tickets)
        {
            <tr>
                <td>@Html.DisplayFor(ModelItem => ti.MovieShowing.Movie.Title)</td>
                <td>@Html.DisplayFor(ModelItem => ti.TicketPrice)</td>
                <td>@Html.DisplayFor(ModelItem => ti.Seat)</td>
                <td>@Html.DisplayFor(ModelItem => ti.MovieShowing.StartTime)</td>
            </tr>
        }
    </table>
    <form asp-action="Cancel">
        <input type="hidden" asp-for="MovieOrderID" />
        <input type="submit" value="Cancel" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
