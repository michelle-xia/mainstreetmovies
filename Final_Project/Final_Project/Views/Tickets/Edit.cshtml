@model Final_Project.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<p class="text-danger">@ViewBag.ErrorMessage</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketId" />
            <img src="~/Images/TheaterSeats.png" />
            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                @Html.DropDownListFor(model => model.Seat, (SelectList)ViewBag.AllSeats, new { @class = "form-control" })
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action= "Index" asp-route-movieOrderID="@Model.MovieOrder.MovieOrderID">Back to List</a>
</div>

