@model Final_Project.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Add Ticket To Order</h1>

<h4>Ticket</h4>
<hr />
<p class="text-danger">@ViewBag.ErrorMessage</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.MovieOrder.MovieOrderID)
            <img src="~/Images/TheaterSeats.png" />

            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                <input asp-for="Seat" class="form-control" />
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Movie Showings:</label>
                @Html.DropDownList("SelectedShowing", (SelectList)ViewBag.AllShowings, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-movieOrderID="@Model.MovieOrder.MovieOrderID">Back to List</a>
</div>

