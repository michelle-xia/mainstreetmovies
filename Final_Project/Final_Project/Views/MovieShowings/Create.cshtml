@model Final_Project.Models.MovieShowing

@{
    ViewData["Title"] = "Create";
}
<br>

<h1>Create</h1>

<h4>MovieShowing</h4>
<hr />
<p class="text-danger">@ViewBag.ErrorMessage</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Movies:</label>
                @Html.DropDownList("SelectedMovie", (SelectList)ViewBag.AllMovies, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="TheaterSelection" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="TheaterSelection" value="@TheaterType.One" checked="checked" />&nbsp; Theater One
                <input type="radio" class="radio" asp-for="TheaterSelection" value="@TheaterType.Two" />&nbsp; Theater Two
            </div>
            <div class="form-group form-check form-check-inline">
                <label asp-for="IsSpecial" class="control-label"></label>
                <input asp-for="IsSpecial" class="form-control" />
                <span asp-validation-for="IsSpecial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

