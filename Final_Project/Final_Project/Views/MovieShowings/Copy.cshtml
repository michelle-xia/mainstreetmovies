@model Final_Project.Models.CopyViewModel

@{
    ViewData["Title"] = "CopyShowing";
}
<br>

<h1>Select Showing to Copy</h1>

<h4>Ticket</h4>
<hr />
<p class="text-danger">@ViewBag.ErrorMessage</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="FinalizeCopy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CopyFromDate" class="control-label"></label>
                <input asp-for="CopyFromDate" class="form-control" />
                <span asp-validation-for="CopyFromDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CopyFromTheater" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="CopyFromTheater" value="@TheaterType.One" checked="checked" />&nbsp; Theater One
                <input type="radio" class="radio" asp-for="CopyFromTheater" value="@TheaterType.Two" />&nbsp; Theater Two
            </div>
            <div class="form-group">
                <label asp-for="CopyToDate" class="control-label"></label>
                <input asp-for="CopyToDate" class="form-control" />
                <span asp-validation-for="CopyToDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CopyToTheater" class="control-label"></label><br />
                <input type="radio" class="radio" asp-for="CopyToTheater" value="@TheaterType.One" checked="checked" />&nbsp; Theater One
                <input type="radio" class="radio" asp-for="CopyToTheater" value="@TheaterType.Two" />&nbsp; Theater Two
            </div>
            <div class="form-group">
                <input type="submit" value="Copy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
