@model IndexViewModel
@{
    ViewBag.Title = "Change Password";
}
<br>


<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Welcome! </dt>
        <dd>@Model.FullName</dd>
        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>


        <dt>Email:</dt>
        <dd>@Model.Email</dd>
        <dt>Birthday:</dt>
        <dd>@Model.Birthday</dd>
        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>
        <dt>Full Address:</dt>
        <dd>@Model.FullAddress</dd>

        <dt>Total Popcorn Points:</dt>
        <dd>@Model.TotalPopcornPoints</dd>

        <dt>Password:</dt>
        <dd>
            [@Html.ActionLink("Change your password", "ChangePassword")]
            [@Html.ActionLink("Change your account settings", "ChangeAccount")]
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Manager"))
                {
                    <br>
                    <a asp-action="SeeAll" asp-controller="Account" class="btn btn-outline-danger">See All Accounts</a>

                }
                @if (User.IsInRole("Employee"))
                {
                    <br>
                    <a asp-action="SeeAll" asp-controller="Account" class="btn btn-outline-danger">See All Accounts</a>

                }
            }

        </dd>
    </dl>
</div>