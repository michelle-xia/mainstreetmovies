@model Final_Project.Models.TotalReportFilterViewModel

@{
    ViewData["Title"] = "ReportFilter";
}
<br>

<h1>Total Seats and Revenue Report Filter Criteria</h1>
<h3>Filters</h3>
<form asp-action="FilteredTotals">
    <label asp-for="MovieId" class="control-label"></label>
    @Html.DropDownListFor(model => model.MovieId, (SelectList)ViewBag.AllMovies, new { @class = "form-control" })
    <div class="form-group">
        <label asp-for="MPAARating" class="control-label"></label><br />
        <input type="radio" class="radio" asp-for="MPAARating" value="@MPAARatings.G" /> G<br />
        <input type="radio" class="radio" asp-for="MPAARating" value="@MPAARatings.PG" /> PG<br />
        <input type="radio" class="radio" asp-for="MPAARating" value="@MPAARatings.PG13 " /> PG-13<br />
        <input type="radio" class="radio" asp-for="MPAARating" value="@MPAARatings.NC17" /> NC-17<br />
        <input type="radio" class="radio" asp-for="MPAARating" value="@MPAARatings.R" /> R<br />
        <input type="radio" class="radio" asp-for="MPAARating" value="@MPAARatings.Unrated" /> Unrated<br />
    </div>
    <p class="text-danger">@ViewBag.ErrorMessage</p>
    <div>
        <label asp-for="DateRangeStart" class="control-label"></label>
        <input asp-for="DateRangeStart" class="form-control" />
        <label asp-for="DateRangeEnd" class="control-label"></label>
        <input asp-for="DateRangeEnd" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ChoiceTime" class="control-label"></label><br />
        <input type="radio" class="radio" asp-for="ChoiceTime" value="@DateOrTime.DateRange" checked="checked" /> Filter by Date<br />
        <input type="radio" class="radio" asp-for="ChoiceTime" value="@DateOrTime.TimeOfDay" /> Filter by Time of Day<br />
    </div>
    <div class="form-group">
        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>
</form>
